<?xml version="1.0"?>
<config>
	<modules>
		<Parth_Faq>
			<version>1.0.0</version>
		</Parth_Faq>
	</modules>
	<global>
		<helpers>
			<faq>
				<class>Parth_Faq_Helper</class>
			</faq>
		</helpers>
		<blocks>
			<faq>
				<class>Parth_Faq_Block</class>
			</faq>
		</blocks>
		<models>
			<faq>
				<class>Parth_Faq_Model</class>
				<resourceModel>faq_resource</resourceModel>
			</faq>
			<faq_resource>
				<class>Parth_Faq_Model_Resource</class>
				<entities>
					<faqgrid>
						<table>faq_faqgrid</table>
					</faqgrid>
				</entities>
			</faq_resource>
		</models>
		<resources>
			<faq_setup>
				<setup>
				<module>Parth_Faq</module>
				</setup>
			</faq_setup>
			<faq_write>
				<connection>
					<use>core_write</use>
				</connection>
			</faq_write>
			<faq_read>
				<connection>
					<use>core_read</use>
				</connection>
			</faq_read>
		</resources>
	</global>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<parth_faq before="Mage_Adminhtml">Parth_Faq_Adminhtml</parth_faq>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<faq>
					<file>faq.xml</file>
				</faq>
			</updates>
		</layout>
	</adminhtml>
</config> 